<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/windowBackground"
    tools:context=".Authentication.Login">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true">
        <EditText
            android:id="@+id/edtTxt_usernameoremail"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/btn_backshape"
            android:drawableStart="@drawable/ic_user"
            android:drawablePadding="12dp"
            android:hint="username or email "
            android:inputType="textPersonName"
            android:paddingStart="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp" />
        <EditText
            android:id="@+id/edtTxt_Password"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/btn_backshape"
            android:drawableStart="@drawable/ic_password"
            android:drawablePadding="10dp"
            android:hint="password "
            android:layout_below="@+id/edtTxt_usernameoremail"
            android:inputType="textPassword"
            android:padding="12dp"
            android:paddingStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"/>
        <Button
            android:id="@+id/btn_Login"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=" Log in"
            android:background="@drawable/btn_loginshape"
            android:textStyle="bold"
            android:layout_below="@+id/edtTxt_Password"
            android:textColor="@android:color/white"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="50dp"
            android:layout_marginLeft="50dp" />
        <TextView
            android:id="@+id/txtWarning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_Login"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="5dp"
            android:text="Warning"
            android:textColor="@color/colorAccent"
            android:visibility="gone" />
        <TextView
            android:id="@+id/txtV_note"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="14sp"
            android:layout_below="@+id/txtWarning"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:text="@string/app_traineetext3"
            android:layout_marginTop="30dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"/>

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Developed BY ALAADDIN"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="5dp"
        android:textStyle="italic"
        android:id="@+id/txtLicense2"/>


</RelativeLayout>